<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
     <script src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js" type="text/javascript" charset="utf-8"></script>
  </head>
  <body class="login_bg">
    <section class="loginBox">
    	<header class="loginHeader">
    		    <h1>超市管理系统</h1>
    	</header>
    	<section class="loginCont">
    		  <div class="loginForm">
    		  	<div class="inputbox">
    		       <label for="user">用户名：</label>
    		       <input id="user" type="text" placeholder="请输入用户名" required/>
    		  	</div>
    		  	<div class="inputbox">
    		  		 <label for="pass">密码：</label>
               <input id="pass" type="password" placeholder="请输入密码" required/>
    		  	</div>
    		  	<div class="subBtn">
    		  		<input type="submit" value="登录" class="login"/>
              <input type="reset" value="注册" class="register"/ onclick="location.href='/register'">
    		  	</div>
    		  </div>
    	</section>
    </section> 
    
  </body>
  <script type="text/javascript">
  	$('.login').click(function(){
  		$.ajax({
  			type:"post",
  			url:"users/login",
  			data:{
  				user:$('#user').val(),
  				pass:$('#pass').val()
  			},
  			async:true,
  			success:function(data){
  				if(data==2){
		  				alert('登录成功')
		  				location.href="/detail"
		  			}else if(data==3){
		  				alert('用户名不存在')
		  			}else if(data==4){
		  				alert('密码错误')
		  			}
  			}
  		});
  	})
  </script>
</html>
