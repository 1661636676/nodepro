  <script type="text/javascript">
  	$('.bt1').click(function(){
	  		$.ajax({
	  		type:"post",
	  		url:"users/reset",
	  		async:true,
	  		data:{
	  			pass:$('.pass').val(),
	  			newpass:$('.newpass').val()
	  		},
